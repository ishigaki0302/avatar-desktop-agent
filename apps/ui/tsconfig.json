{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@avatar-agent/schema": ["../../packages/schema/src/index.ts"],
      "@avatar-agent/utils": ["../../packages/utils/src/index.ts"]
    }
  },
  "include": [
    "src",
    "../../packages/schema/src",
    "../../packages/utils/src"
  ]
}
